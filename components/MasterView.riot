<MasterView>
  <div if={state.master} class="container_card">
  <div class="title_master">
    <h2>{state.master.title} Master</h2>
    <p>Ann√©e: {state.master.year}</p>
    <p>Genres: {state.master.genres?.join(', ')}</p>
    <p>Styles: {state.master.styles?.join(', ')}</p>
    <img class="image" src={state.cover_image} alt="Cover" />
  </div>
  <div class="tracklist_master">
    <h3>Tracklist</h3>
    <ul>
      <li each={track in state.master.tracklist}>
        {track.position}. {track.title} 
        <span if={track.artists?.length}> - {track.artists.map(a => a.name).join(', ')}</span>
      </li>
    </ul>
    </div>
  </div>

  <p if={!state.master} class="text-center">Chargement...</p>

  <script>
  export default {
    props: ["master_id", "img_master"],

    async onBeforeMount(props) {
      this.state = { master: null, cover_image: null };
      
      if (props.master_id) {
        this.state.master = await masterdiscogs(props.master_id);
        this.state.cover_image = decodeURIComponent(props.img_master);
        this.update();
      }
    }
  };
</script>

